<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gauravagrawal.com.tictactoe.MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/b2"
        android:background="#00bfff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/b3"
        android:background="#00bfff"
        android:layout_alignTop="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:layout_marginLeft="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/b1"
        android:background="#00bfff"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/b2"
        android:layout_marginRight="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/a2"
        android:background="#00bfff"
        android:layout_above="@+id/b2"
        android:layout_toEndOf="@+id/b1"
        android:layout_marginBottom="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/a3"
        android:background="#00bfff"
        android:layout_alignTop="@+id/a2"
        android:layout_toEndOf="@+id/a2"
        android:layout_marginLeft="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/a1"
        android:background="#00bfff"
        android:layout_alignTop="@+id/a2"
        android:layout_toStartOf="@+id/a2"
        android:layout_marginRight="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/c1"
        android:background="#00bfff"
        android:layout_below="@+id/b2"
        android:layout_alignStart="@+id/b1"
        android:layout_marginTop="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/c2"
        android:background="#00bfff"
        android:layout_below="@+id/b2"
        android:layout_toEndOf="@+id/b1"
        android:layout_marginTop="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/c3"
        android:background="#00bfff"
        android:layout_below="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset All"
        android:id="@+id/refresh"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp" />
</RelativeLayout>
